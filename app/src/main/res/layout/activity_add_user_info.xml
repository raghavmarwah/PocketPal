<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raghavmarwah.pocketpal.AddUserInfoActivity">

    <ImageView
        android:id="@+id/splash_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/splash_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/splash_text"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_text"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/splash_bottom_grass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/splash_bottom_grass_2"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/splash_icon"
        android:layout_below="@+id/splash_icon"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/splash_icon"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Monthly Income"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/gobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_bottom_grass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="let's go !!"/>



</RelativeLayout>
