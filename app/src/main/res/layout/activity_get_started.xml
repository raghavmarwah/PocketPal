<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csis3175.pocketpal.GetStartedActivity">

    <LinearLayout
        android:id="@+id/cloud_layout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/splash_cloud"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/splash_cloud"
            android:layout_weight="1"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/cloud3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/splash_cloud"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/cloud4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/splash_cloud"
            android:layout_weight="1"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <ImageView
        android:layout_below="@id/cloud_layout"
        android:id="@+id/splash_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/splash_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"/>

    <ImageView
        android:id="@+id/splash_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_text"
        android:layout_below="@id/splash_icon"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/splash_bottom_grass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/splash_bottom_grass_2"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_bottom_grass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="get started"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressIndeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_bottom_grass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:visibility="invisible"/>

</RelativeLayout>
