<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.raghavmarwah.pocketpal.MonthViewActivity"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Budget"
                android:layout_alignParentLeft="true"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/monthlyBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Expenditure"
                android:layout_alignParentLeft="true"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/currentExpenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/groceriesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Groceries"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/groceriesTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/groceriesProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/groceriesText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/groceriesCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/groceriesText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/insurancesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Insurances"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/insurancesTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/insurancesProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/insurancesText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/insurancesCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/insurancesText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Phone Bills"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/phoneTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/phoneProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/phoneCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/phoneText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/rentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Rent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/rentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/rentProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rentText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/rentCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/rentText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/eatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Eating Out"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/eatTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/eatProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/eatText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/eatCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/eatText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/shopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Shopping"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/shopTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/shopProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/shopCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/shopText"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground">

            <TextView
                android:id="@+id/miscText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Miscellaneous"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/miscTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>

            <ProgressBar
                android:id="@+id/miscProgress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/miscText"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:progress="50"
                android:progressTint="@color/progressColor" />
            <TextView
                android:id="@+id/miscCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/miscText"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="invisible">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="?android:attr/windowBackground" />

        <LinearLayout
            android:id="@+id/calendarButtonArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/calendarView"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/addExpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD EXPENDITURE"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/viewExpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW EXPENDITURE"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/propic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/usrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/propic"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usrname"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/income"
            android:text="DELETE PROFILE"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</RelativeLayout>
